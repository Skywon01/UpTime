{% extends 'base.html.twig' %}

{% block title %}Machine - {{ machine.name }}{% endblock %}

{% block body %}
    <div class="container-fluid mt-3 mt-md-4">
        {# Fil d'ariane plus discret sur mobile #}
        <nav aria-label="breadcrumb" class="d-none d-md-block">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_machine_index') }}">Machines</a></li>
                <li class="breadcrumb-item active">{{ machine.name }}</li>
            </ol>
        </nav>

        <div class="row g-4">
            {# --- COLONNE INFOS (Ordre 1 sur mobile) --- #}
            <div class="col-12 col-lg-8 order-1">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-3 mb-3">
                    <h1 class="h2 mb-0">{{ machine.name }}</h1>
                    <span class="badge {{ machine.status == 'Actif' ? 'bg-success' : 'bg-danger' }} fs-6 shadow-sm">
                        {{ machine.status }}
                    </span>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <label class="text-muted small text-uppercase fw-bold">Fabricant</label>
                                <p class="mb-0 fw-semibold">{{ machine.brand }}</p>
                            </div>
                            <div class="col-sm-6">
                                <label class="text-muted small text-uppercase fw-bold">Numéro de série</label>
                                <p class="mb-0"><code>{{ machine.serialNumber }}</code></p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Actions prioritaires : Boutons larges sur mobile #}
                <div class="d-grid d-md-flex gap-2 mb-4">
                    <a href="{{ path('app_intervention_new', {'machine': machine.id}) }}" class="btn btn-warning btn-lg fs-6 shadow-sm">
                        <i class="bi bi-tools"></i> Nouvelle Intervention
                    </a>
                    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}" class="btn btn-outline-secondary">
                        <i class="bi bi-pencil"></i> Éditer
                    </a>
                </div>
            </div>

            {# --- COLONNE QR CODE (Ordre 2 sur PC, mais remonte si besoin) --- #}
            <div class="col-12 col-lg-4 order-0 order-lg-2">
                <div class="card shadow-sm border-0 text-center py-3 bg-white">
                    <div class="card-body">
                        <h6 class="text-uppercase text-muted fw-bold mb-3 small">Accès Mobile Rapide</h6>
                        <div class="qr-code-wrapper mb-2">
                            <img src="{{ path('app_machine_qr_code', {'id': machine.id}) }}"
                                 alt="QR Code"
                                 class="img-fluid"
                                 style="max-width: 140px; border: 1px solid #eee; padding: 5px;">
                        </div>
                        <p class="text-muted x-small mb-0 d-none d-md-block">
                            Scannez pour ouvrir sur smartphone.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <hr class="my-4 my-md-5">

        {# --- SECTION HISTORIQUE : Table-to-Cards sur mobile --- #}
        <div class="mb-5">
            <h3 class="h4 mb-4"><i class="bi bi-clock-history text-primary"></i> Historique</h3>

            {# Desktop Table #}
            <div class="card border-0 shadow-sm d-none d-md-block">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                        <tr>
                            <th class="ps-3">Date</th>
                            <th>Objet</th>
                            <th>Technicien</th>
                            <th class="text-center">Statut</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for intervention in machine.interventions %}
                            <tr>
                                <td class="ps-3">{{ intervention.createdAt|date('d/m/Y') }}</td>
                                <td class="fw-bold">{{ intervention.title }}</td>
{#                                <td><small>{{ intervention.technician.email ?? 'N/A' }}</small></td>#}
                                <td class="text-center">
                                    {% if intervention.endedAt %}
                                        <span class="badge rounded-pill bg-success-subtle text-success border border-success">Terminé</span>
                                    {% else %}
                                        <a href="{{ path('app_intervention_close', {'id': intervention.id}) }}" class="btn btn-sm btn-warning">Clôturer</a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {# Mobile Cards #}
            <div class="d-md-none">
                {% for intervention in machine.interventions %}
                    <div class="card mb-2 border-0 shadow-sm">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">{{ intervention.createdAt|date('d/m/Y') }}</small>
                                {% if intervention.endedAt %}
                                    <span class="text-success small fw-bold">● Terminé</span>
                                {% else %}
                                    <span class="text-warning small fw-bold animate-pulse">● En cours</span>
                                {% endif %}
                            </div>
                            <div class="fw-bold">{{ intervention.title }}</div>
                            <div class="d-flex justify-content-between align-items-center mt-2">
{#                                <small class="text-muted">{{ intervention.technician.email|split('@')[0] ?? 'N/A' }}</small>#}
                                {% if not intervention.endedAt %}
                                    <a href="{{ path('app_intervention_close', {'id': intervention.id}) }}" class="btn btn-sm btn-warning py-0">Clôturer</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        {# --- SECTION PIÈCES : Grid Responsive --- #}
        <div class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="h4 mb-0"><i class="bi bi-gear-wide-connected text-primary"></i> Pièces</h3>
                <a href="{{ path('app_part_new', {'machine': machine.id}) }}" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-plus"></i> <span class="d-none d-sm-inline">Référencer</span>
                </a>
            </div>

            <div class="row g-3">
                {% for part in machine.parts %}
                    <div class="col-12 col-sm-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="fw-bold mb-0 text-truncate" style="max-width: 65%;">{{ part.designation }}</h6>
                                    <span class="badge {{ part.stockQuantity > 0 ? 'bg-info-subtle text-info' : 'bg-danger-subtle text-danger' }} x-small">
                                        Stock : {{ part.stockQuantity }}
                                    </span>
                                </div>
                                <div class="text-primary fw-bold fs-5 mb-1">{{ part.price|number_format(2, ',', ' ') }} €</div>
                                <small class="text-muted d-block text-truncate">Réf : <code>{{ part.reference }}</code></small>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
