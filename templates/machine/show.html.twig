{% extends 'base.html.twig' %}

{% block title %}Machine{% endblock %}

{% block body %}
    <h1>Machine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ machine.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ machine.name }}</td>
            </tr>
            <tr>
                <th>Fabricant</th>
                <td>{{ machine.brand }}</td>
            </tr>
            <tr>
                <th>Numéro de série</th>
                <td>{{ machine.serialNumber }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ machine.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_machine_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}" class="btn btn-secondary">Editer</a>

    {{ include('machine/_delete_form.html.twig') }}

    <h3 class="mt-5">Historique des interventions</h3>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Date</th>
                <th>Objet</th>
                <th>Technicien</th>
                <th>Statut</th>
            </tr>
            </thead>
            <tbody>
            {% for intervention in machine.interventions %}
                <tr>
                    <td>{{ intervention.createdAt|date('d/m/Y') }}</td>
                    <td>{{ intervention.title }}</td>
                    <td>{{ intervention.technician.email ?? 'N/A' }}</td>
                    <td>
                        {% if intervention.endedAt %}
                            <span class="badge bg-success">Terminé</span>
                        {% else %}
                            <a href="{{ path('app_intervention_close', {'id': intervention.id}) }}" class="btn btn-sm btn-warning">Clôturer</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune intervention enregistrée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <hr class="my-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-gear-wide-connected"></i> Pièces détachées compatibles</h3>
        <a href="{{ path('app_part_new', {'machine': machine.id}) }}" class="btn btn-outline-secondary btn-sm">
            + Référencer une pièce
        </a>
    </div>

    <div class="row">
        {% for part in machine.parts %}
            <div class="col-md-6 mb-3">
                <div class="card bg-light border-0 shadow-sm">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">{{ part.designation }}</h6>
                            <p class="text-muted small mb-0">
                                Réf : <strong>{{ part.reference }}</strong> |
                                Fournisseur : {{ part.supplier.name ?? 'Non défini' }}
                            </p>
                        </div>
                        <div class="text-end">
                        <span class="badge {{ part.stockQuantity > 0 ? 'bg-info' : 'bg-danger' }}">
                            Stock : {{ part.stockQuantity }}
                        </span>
                            <div class="mt-2 text-primary fw-bold">
                                {{ part.price|number_format(2, ',', ' ') }} €
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-muted italic">Aucune pièce détachée n'est encore associée à cette machine.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
