{% extends 'base.html.twig' %}

{% block title %}Machine{% endblock %}

{% block body %}
    <h1>Machine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ machine.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ machine.name }}</td>
            </tr>
            <tr>
                <th>Fabricant</th>
                <td>{{ machine.brand }}</td>
            </tr>
            <tr>
                <th>Numéro de série</th>
                <td>{{ machine.serialNumber }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ machine.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_machine_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}" class="btn btn-secondary">Editer</a>

    {{ include('machine/_delete_form.html.twig') }}

    <h3 class="mt-5">Historique des interventions</h3>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Date</th>
                <th>Objet</th>
                <th>Technicien</th>
                <th>Statut</th>
            </tr>
            </thead>
            <tbody>
            {% for intervention in machine.interventions %}
                <tr>
                    <td>{{ intervention.createdAt|date('d/m/Y') }}</td>
                    <td>{{ intervention.title }}</td>
                    <td>{{ intervention.technician.email ?? 'N/A' }}</td>
                    <td>
                        {% if intervention.endedAt %}
                            <span class="badge bg-success">Terminé</span>
                        {% else %}
                            <a href="{{ path('app_intervention_close', {'id': intervention.id}) }}" class="btn btn-sm btn-warning">Clôturer</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune intervention enregistrée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
