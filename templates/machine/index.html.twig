{% extends 'base.html.twig' %}

{% block title %}Machine index{% endblock %}

{% block body %}
    <h1>Machine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>SerialNumber</th>
                <th>Status</th>
                <th>actions</th>
                <th>Created</th>
                <th>Updated</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.name }}</td>
                <td>{{ machine.brand }}</td>
                <td>{{ machine.serialNumber }}</td>
                <td>{{ machine.status }}</td>
                <td>
                    <a href="{{ path('app_machine_show', {'id': machine.id}) }}">show</a>
                    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>
                </td>
                <td>{{ machine.createdAt|date('d/m/Y H:i') }}</td>
                <td>{{ machine.updatedAt|date('d/m/Y H:i') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_machine_new') }}">Create new</a>
{% endblock %}
