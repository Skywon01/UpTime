{% extends 'base.html.twig' %}

{% block title %}Machine index{% endblock %}

{% block body %}
    <h1>Machine index</h1>
    <a class="btn btn-primary mb-4" href="{{ path('app_machine_new') }}">Ajouter une machine</a>
    <div class="row">
        {% for machine in machines %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            {{ machine.name }}
                            <span class="badge bg-{{ machine.status == 'active' ? 'success' : 'secondary' }} fs-6">
                            {{ machine.status }}
                        </span>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{ machine.brand }}</h6>

                        <p class="card-text">
                            <strong>S/N:</strong> {{ machine.serialNumber }}<br>
                            <strong>Entreprise:</strong> {{ machine.company.name }}
                        </p>

                        <div class="d-flex justify-content-between mt-3">
                            <a href="{{ path('app_machine_show', {'id': machine.id}) }}" class="btn btn-sm btn-outline-primary">Voir</a>
                            <a href="{{ path('app_machine_edit', {'id': machine.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                        </div>
                    </div>
                    <div class="card-footer text-muted small">
                        Ajoutée le {{ machine.createdAt|date('d/m/Y') }}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="alert alert-info">Aucune machine trouvée.</p>
            </div>
        {% endfor %}
    </div>


{% endblock %}
