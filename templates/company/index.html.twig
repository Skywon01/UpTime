{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
    <h1 class="mb-5">Liste des entreprises</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Siret</th>
                <th>actions</th>
                <th>Création</th>
                <th>Mise à jour</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.siret }}</td>
                <td>
                    <a href="{{ path('app_company_show', {'id': company.id}) }}" class="btn btn-primary">Voir</a>
                    <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-secondary">Editer</a>
                </td>
                <td>{{ company.createdAt|date('d/m/Y H:i') }}</td>
                <td>{{ company.updatedAt|date('d/m/Y H:i') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'entreprise enregistrée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_company_new') }}" class="btn btn-primary">Nouvelle entreprise</a>
{% endblock %}
