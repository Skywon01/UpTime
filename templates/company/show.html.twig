{% extends 'base.html.twig' %}

{% block title %}Company{% endblock %}

{% block body %}
    <h1>Company</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Siret</th>
                <td>{{ company.siret }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_company_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-secondary">Editer</a>

    {{ include('company/_delete_form.html.twig') }}

    <hr class="my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Parc Machines ({{ company.machines|length }})</h2>
        <a href="{{ path('app_machine_new', {'company': company.id}) }}" class="btn btn-primary btn-sm">
            + Ajouter une machine pour ce client
        </a>
    </div>

    <div class="row">
        {% for machine in company.machines %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    {% if machine.imageName %}
                        <img src="{{ vich_uploader_asset(machine, 'imageFile') }}" class="card-img-top" style="height: 150px; object-fit: cover;">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ machine.name }}</h5>
                        <p class="text-muted small">{{ machine.brand }}</p>

                        {# On réutilise ta logique de badge dynamique ici aussi ! #}
                        {% set en_panne = false %}
                        {% for intervention in machine.interventions %}
                            {% if intervention.endedAt is null %}{% set en_panne = true %}{% endif %}
                        {% endfor %}

                        <span class="badge bg-{{ en_panne ? 'danger' : 'success' }} mb-3">
                        {{ en_panne ? 'En maintenance' : 'Opérationnelle' }}
                    </span>

                        <div class="d-grid">
                            <a href="{{ path('app_machine_show', {'id': machine.id}) }}" class="btn btn-outline-primary btn-sm">
                                Gérer la machine
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="alert alert-light border">Aucune machine enregistrée pour cette entreprise.</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}
