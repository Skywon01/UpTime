{% extends 'base.html.twig' %}

{% block title %}D√©tail Intervention #{{ intervention.id }}{% endblock %}

{% block body %}
    <div class="container-fluid p-0">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
            <div>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a href="{{ path('app_intervention_index') }}">Interventions</a></li>
                        <li class="breadcrumb-item active">D√©tail #{{ intervention.id }}</li>
                    </ol>
                </nav>
                <h1 class="h2 mb-0">{{ intervention.title }}</h1>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('app_intervention_edit', {'id': intervention.id}) }}" class="btn btn-outline-secondary">
                    <i class="bi bi-pencil"></i> <span class="d-none d-md-inline">Modifier</span>
                </a>
                {{ include('intervention/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="row g-4">
            <div class="col-12 col-lg-8">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="card-title mb-0"><i class="bi bi-file-text me-2"></i>D√©tails de l'intervention</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <label class="text-muted small text-uppercase fw-bold">Description</label>
                            <p class="lead mt-1">{{ intervention.description|nl2br }}</p>
                        </div>

                        <div class="row g-3">
                            <div class="col-6 col-md-4">
                                <label class="text-muted small text-uppercase fw-bold d-block">Machine</label>
                                <span class="badge bg-info text-dark fs-6">
                                    <i class="bi bi-cpu"></i> {{ intervention.machine ? intervention.machine.name : 'N/A' }}
                                </span>
                            </div>
                            <div class="col-6 col-md-4">
                                <label class="text-muted small text-uppercase fw-bold d-block">Cr√©√© le</label>
                                <span><i class="bi bi-calendar3"></i> {{ intervention.createdAt|date('d/m/Y H:i') }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body">
                        <h5 class="card-title mb-4">Statut & Bilan</h5>

                        <div class="d-grid gap-3">
                            <div class="p-3 bg-white rounded border">
                                <label class="text-muted small text-uppercase fw-bold d-block mb-1">Temps pass√©</label>
                                {% if intervention.endedAt %}
                                    {% set diff = intervention.endedAt.diff(intervention.createdAt) %}
                                    <h4 class="mb-0 text-primary">
                                        <i class="bi bi-clock-history"></i> {{ diff.h }}h {{ diff.i }}min
                                    </h4>
                                {% else %}
                                    <div class="d-flex align-items-center justify-content-between">
                                        <span class="badge bg-warning text-dark fs-6 animate-pulse">En cours</span>
                                        <a href="{{ path('app_intervention_close', {'id': intervention.id}) }}" class="btn btn-warning btn-sm">
                                            üèÅ Terminer
                                        </a>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="p-3 bg-white rounded border">
                                <label class="text-muted small text-uppercase fw-bold d-block mb-1">Co√ªt des pi√®ces</label>
                                <h4 class="mb-0 text-success">
                                    <i class="bi bi-currency-euro"></i> {{ intervention.TotalPartsCost|number_format(2, ',', ' ') }} ‚Ç¨
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-4 d-grid">
                    <a href="{{ path('app_intervention_index') }}" class="btn btn-link text-muted">
                        <i class="bi bi-arrow-left"></i> Retour √† la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
